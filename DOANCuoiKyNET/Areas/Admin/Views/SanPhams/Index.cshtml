@model IEnumerable<DOANCuoiKyNET.Areas.Admin.Models.Sanpham_Loai>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tenSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.giaSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hinhAnh)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.soLuongKho)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.LoaiSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.trangThai)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.giaSP)
            </td>
            <td>
                <img src="~/images/sanpham/@Html.DisplayFor(modelItem => item.hinhAnh)" style="width:60px;height:80px" />

            </td>

            <td>
                @Html.DisplayFor(modelItem => item.soLuongKho)
            </td>



            <td>
                @Html.DisplayFor(modelItem => item.LoaiSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.trangThai)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.idSP">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idSP">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idSP">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
