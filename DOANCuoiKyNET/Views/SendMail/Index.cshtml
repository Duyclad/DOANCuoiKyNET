@{ 
    Layout = "_FrontEnd";
}
<div class="col-md-6">
    <label>Mã xác nhận đã được gửi về email của bạn. Vui lòng nhập mã xác nhận:</label>
    <input class="form-control" id="maxacnhan" type="text" placeholder="Mã xác nhận">
</div>
<div class="col-md-12">
    <button class="btn" id="xacnhan">Xác nhận</button>
</div>
<div id="kqua" style="color:red"></div>


<script>

    $(document).ready(function () {
        $("#xacnhan").click(function () {
            $("#kqua").html($("#maxacnhan").val().trim())
            $.ajax({

                url: "/Login/Xacnhan/",
                data: {
                    codex: $("#maxacnhan").val().trim(),
                   
                },
                type: "POST",
                success: function (data) {

                    if (data == "0") {
                        $("#kqua").html("Mã xác nhận chưa đúng!")
                    }
                    else {
                        window.location="/Home/index/"
                    }

                },
            }); 
        });
    });
</script>
