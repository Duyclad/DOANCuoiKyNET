

@{
    ViewData["Title"] = "Index";
    Layout = "_FrontEnd";
}

<!-- My Account Start -->
<div class="my-account">
    <div class="container-fluid">
        <div class="row">
           
            <div class="col-md-12">
                <div class="tab-content">
                    <div class="tab-pane fade" id="account-tab" role="tabpanel" aria-labelledby="account-nav">
                        <h4>Thông tin tài khoản</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <input class="form-control" id="hoacc" type="text" placeholder="First Name">
                            </div>
                            <div class="col-md-6">
                                <input class="form-control" id="tenacc" type="text" placeholder="Last Name">
                            </div>
                            <div class="col-md-6">
                                <input class="form-control" id="sdtacc" type="text" placeholder="Mobile">
                            </div>
                            <div class="col-md-6">
                                <input class="form-control" id="emailacc" type="text" placeholder="Email">
                            </div>
                            <div class="col-md-12">
                                <input class="form-control" id="addacc" type="text" placeholder="Address">
                            </div>
                            <div class="col-md-12">
                                <button class="btn">Cập nhật thông tin</button>
                                <br><br>
                            </div>
                        </div>
                        <h4>Mật khẩu</h4>
                        <div class="row">
                            <div class="col-md-12">
                                <input class="form-control" id="pw" type="password" placeholder="Current Password">
                            </div>
                            <div class="col-md-6">
                                <input class="form-control" id="newpw" type="text" placeholder="New Password">
                            </div>
                            <div class="col-md-6">
                                <input class="form-control" id="repw" type="text" placeholder="Confirm Password">
                            </div>
                            <div class="col-md-12">
                                <button class="btn">Xác nhận</button>
                            </div>
                            <div id="kqua" style="color:red">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>









